{
  "compilerOptions": {
    "target": "esnext", // 指定 ECMAScript 目标版本: 'esnext'
    "module": "esnext", // 指定使用模块: 'commonjs', 'amd', 'system', 'umd' or 'es2015'
    "moduleResolution": "Bundler", // 选择模块解析策略
    "experimentalDecorators": true, // 启用实验性的ES装饰器
    // "allowSyntheticDefaultImports": false,   // 允许从没有设置默认导出的模块中默认导入。
    "sourceMap": true, // 把 ts 文件编译成 js 文件的时候，同时生成对应的 map 文件
    "strict": true, // 启用所有严格类型检查选项
    "noImplicitAny": false, // 在表达式和声明上有隐含的 any类型时报错
    "removeComments": true, // 删除编译后的所有的注释
    // "lib": ["dom", "esnext"], // 指定要包含在编译中的库文件
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true, // 跳过声明文件的类型检查
    "noUnusedLocals": false, // 未使用局部变量
    "noUnusedParameters": false, // 函数中未使用参数
    "resolveJsonModule": true, // 解析 JSON 模块
    "esModuleInterop": true, // ES 模块互操作性
    "strictFunctionTypes": false,
    "forceConsistentCasingInFileNames": true,
    "noLib": false,
    "jsx": "preserve",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "#/*": ["./types/*"]
    },
    "types": ["vite/client"],
    "noFallthroughCasesInSwitch": false,
    // Required in Vue projects
    "jsxImportSource": "vue",

    "noImplicitThis": true
  },
  //  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/**/*.d.ts",
    "types/**/*.ts",
    "build/**/*.ts",
    "build/**/*.d.ts",
    "vite.config.ts",
    "mock/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "./tsconfig.node.json" }]
  //  "references": [
  //    {
  //      "path": "./tsconfig.config.json"
  //    }
  //  ]
}
